<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".guideline">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FF5456"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:gravity="bottom"
        android:text="INSTRUCTIONS"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.   Each question in the section is a
multiple-choice question with four answer choices." />


    <TextView
        android:id="@+id/textView11"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2.   Read each question and answer
choice carefully and choose the ONE best answer" />

    <TextView
        android:id="@+id/textView12"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3.   Each question contains 5 marks." />


    <TextView
        android:id="@+id/textView13"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4.   Try to answer all questions. In general, if you have some knowledge about a question, it
is better to try to answer it. You will not be penalized for guessing." />


    <TextView
        android:id="@+id/textView14"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5.   You may go back and
review your answers at any time during the testing session." />

    <TextView
        android:id="@+id/textView15"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6.   You may NOT use a calculator or reference materials during the testing session." />
    <TextView
        android:id="@+id/textView16"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7.   Select the Next button to continue" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="250dp"
        android:textSize="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/round_button"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="SKIP" />
</LinearLayout>